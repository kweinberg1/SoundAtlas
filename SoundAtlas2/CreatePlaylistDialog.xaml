<Window x:Class="SoundAtlas2.CreatePlaylistDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Playlist" Height="141" Width="326">
    <Window.Resources>
        <ResourceDictionary Source="SharedVisualTemplates.xaml"/>
    </Window.Resources>
    <Grid Background="{StaticResource controlSecondaryBackground}">
        <Label Content="Enter a playlist name:" HorizontalAlignment="Center" Margin="47,10,65,0" VerticalAlignment="Top" Width="206" Foreground="{StaticResource nodeTextBrush}"/>
        <Button Content="OK" HorizontalAlignment="Left" Margin="47,79,0,0" VerticalAlignment="Top" Width="75" Click="OnOKButtonClick"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="178,79,0,0" VerticalAlignment="Top" Width="75" Click="OnCancelButtonClick"/>
        <TextBox x:Name="PlaylistNameTextBox" HorizontalAlignment="Left" Height="23" Margin="47,41,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="206"/>
    </Grid>
</Window>
